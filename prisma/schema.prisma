generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      Role     // Role can be either STUDENT or COMPANY
  createdAt DateTime @default(now())
}

enum Role {
  STUDENT
  COMPANY
}
